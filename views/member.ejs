<%- include('partials/header', {title: 'Member'}) %>
<div class="container p-3 my-3 border">
    <h2>Member : <%= options %> Data </h2>
    <form method="POST">
    <div class="mb-3">
      <label for="name" class="form-label">Name</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="e.g: John Walker" required value="<%= data.name %>">
    </div>
    <div class="mb-3">
        <label for="phone" class="form-label">Phone</label>
        <input type="text" class="form-control" id="phone" name="phone" placeholder="e.g: 62812345678" required value="<%= data.phone %>">
      </div>
      <div class="mb-3">
        <label for="discount" class="form-label">Discount</label>
        <input type="number" class="form-control" id="discount" name="discount" required value="<%= data.discount %>">
      </div>
    <button type="submit" class="btn btn-primary"><%= options=="Entri"?"Add Data":"Update"%></button>
    <a href="/members" class="btn btn-danger" role="button">Cancel</a>
  </form>
</div>

  <div class="container mb-5 mt-3">
    <div class="row">
      <div class="col-12">
        <table class="table table-striped table-bordered" style="width: 100%;">
          <thead>
            <tr>
              <th  class="col-md-auto">No.</th>
              <th>Name</th>
              <th>Phone</th>
              <th>Discount</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% results.forEach((el, no) => { %>
                <tr>
                    <td class="col-md-auto"><%= no + 1 %></td>
                    <td><%= el.name %></td>
                    <td><%= el.phone %></td>
                    <td><%= formatNumber(el.discount, 'persen') %></td>
                    <td>
                        <a href="/members/edit/<%= el.id  %>" class="btn btn-success" role="button"><i class="fa fa-edit"></i></a>
                        <a href="/members/delete/<%= el.id  %>" class="btn btn-danger" role="button"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<%- include('partials/footer') %>