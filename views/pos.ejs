<%- include('partials/header', {title: 'P.O.S'}) %>
<style>
    html, body {
    height: 100%;
    background-color: black;
}

td{
    margin-top: auto;
    background-color: darkred;
    height: 50px;
    text-align: center;
    vertical-align: middle;
    color: aliceblue;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

#tabelMenu tr, td, img{
    height: 190px;
    width: 280px;
}

.divPesanan{
    vertical-align: baseline;
}

#tabelUtama{
    margin-left: auto;
    margin-right: auto;
}
/* 
#tabelMenu{
    width: fit-content;
} */

#tabelMenu td:hover{
    background-color:#a6ff00;
    color: black;
}

#tabelPesanan{
    vertical-align: top;
    margin-top: 0%;
}
#tabelPesanan th, td, tr{
    vertical-align: top;
    margin: 0;
    border: 2px solid wheat;   
    color: white;
}

#tabelPesanan td{
    vertical-align: middle;
}

#namaBarang{
    text-align: left;
    padding-left: 10px;
}

#jumlah{
    text-align: right;
    padding-right: 10px;
}

#total{
    text-align: right;
    vertical-align: middle;
    padding-right: 10px;
    background-color: rgb(78, 21, 21) ;
    font-size: x-large;
    height: 78px;
}

#judul{
    background-color: rgb(78, 21, 21) ;
}

.runningText{
    color: white;
    font-size: xx-large;
    height: 50px;
    vertical-align: middle;
    font-style: oblique;
    font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
    margin-top: auto;
}

h5{
    color: wheat; 
    text-align: center;
    vertical-align: top;
}
table {
    border-collapse: collapse;
    width: 100%;
}

th, td {
    padding: 8px;
    text-align: left;
    border-bottom: 1px solid #ddd;
}
</style>

<!-- <marquee class="runningText" behavior="scroll" direction="left">
    Selamat Datang di Hacktiv8 Cafe
</marquee> -->

<table id="tabelUtama">
    <tr>
        <td>
            <div id="divMenu">
                <h1>Daftar Menu</h1>
                <table id="tabelMenu">
                    <% results.forEach((el, no) => { %>
                        <% if((no + 1) % 4 == 0) { %>
                            <!-- <tr> -->
                        <% } %>   
                                <td>
                                    <a href="/pos/pesan/<%= el.id %>">
                                        <img src="<%= el.image_url %>" alt="Photo Menu"><br>
                                        <%= el.menu_name %> <br>
                                        <%= "Harga : " + formatNumber(el.price, "money") %>
                                    </a>
                                </td>
                        <% if((no + 1) % 4 == 0) { %>
                            </tr>
                        <% } %>   
                    <% }); %>   
                </table>        
            </div>
        </td>
        <td>
            <div id="divPesanan">
                <h1>Pesanan</h1>
                <table id="tabelPesanan" style="width: 600px;"></table>
            </div>
        </td>
    </tr>
</table>

<%- include('partials/footer') %>